{
  "exclude": ["node_modules", "dist", "docs"],
  "compilerOptions": {
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": false,
    "strictNullChecks": false,
    "outDir": "./out",
    "target": "es5",
    "typeRoots": [
      "/node_modules/@types"
    ]
  },
  "compileOnSave": false
}
